# RAG System Environment Variables
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# LLM PROVIDER API KEYS
# ============================================================================

## Primary: Google Gemini (Required)
# Get key: https://makersuite.google.com/app/apikey
# IMPORTANT: Replace the placeholder below with your actual key;
# do NOT commit real keys to version control.
GEMINI_API_KEY=your_gemini_api_key_here

# Note: This project is configured for Gemini-only.
# OpenAI/OpenRouter keys are not used.

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Override default Gemini model (optional)
# Common: gemini-2.5-flash, gemini-2.5-pro
MODEL_NAME=gemini-2.5-flash

# ============================================================================
# RETRIEVAL CONFIGURATION (Optional)
# ============================================================================

# BM25-only fast path (skip embedding downloads)
# Set to 1 to disable embeddings and use BM25-only when building indices.
# RAG_DISABLE_EMBEDDINGS=1

# ============================================================================
# DEPLOYMENT CONFIGURATION (Optional)
# ============================================================================

# FastAPI host and port
# HOST=0.0.0.0
# PORT=8000

# Enable CORS for web UI
# CORS_ENABLED=true
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# NOTES
# ============================================================================

# Gemini-only mode enabled for this challenge submission.
# Fallback providers removed for code clarity.

# OPTIONAL TOGGLES
# Enable reranker: set to 1/true/yes/on
RAG_ENABLE_RERANKER=0
# Disable embeddings (BM25-only): set to 1
RAG_DISABLE_EMBEDDINGS=0

# Inflation loader optional overrides
INFLATION_SHEET_NAME=
INFLATION_YEAR_COLUMN=Year
INFLATION_INDEX_COLUMN=Index

# Logging verbosity
LOG_LEVEL=INFO
